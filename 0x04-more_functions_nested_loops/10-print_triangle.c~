#include "main.h"

/**
 * print_triangle - prints a triangle, followed by a new line
 * @size: int size
 * Return: 0
 */

void print_triangle(int size)
{
	for (int i = 0; i < size; i++)
	{
		for (int j = 0; j < size; j++)
		{
			if (j >= i)
				_putchar('#');
		}
		_putchar('\n');
	}
	_putchar('\n');
	return (0);
}
